{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Papyrus: compile current file",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "\"/home/austin/dev/workspace/mods/starfield/misc/papyrus_compile.sh\" \"${file}\"; status=$?; [ -f /tmp/papyrus_out.txt ] && cat /tmp/papyrus_out.txt; exit $status"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "papyrus-task",
          "fileLocation": [
            "search",
            {
              "include": [
                "${workspaceFolder}"
              ]
            }
          ],
          "pattern": {
            "regexp": "^(?:(?:[A-Za-z]:)?[\\\\/].*[\\\\/])?([^\\\\/:]+\\.psc)\\((\\d+),(\\d+)\\):\\s*(error|warning|fatal\\s+error)\\s*:\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        },
        {
          "owner": "papyrus-task",
          "fileLocation": [
            "search",
            {
              "include": [
                "${workspaceFolder}"
              ]
            }
          ],
          "pattern": {
            "regexp": "^(?:(?:[A-Za-z]:)?[\\\\/].*[\\\\/])?([^\\\\/:]+\\.psc)\\((\\d+)\\):\\s*(error|warning|fatal\\s+error)\\s*:\\s*(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        },
        {
          "owner": "papyrus-task",
          "fileLocation": [
            "search",
            {
              "include": [
                "${workspaceFolder}"
              ]
            }
          ],
          "pattern": {
            "regexp": "^\"?(?:(?:[A-Za-z]:)?[\\\\/].*[\\\\/])?([^\\\\/:]+\\.psc)\"?\\((\\d+),(\\d+)\\):\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        }
      ]
    }
  ]
}
